<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="com.microsoft.projectoxford.emotionsample.helper.SelectImageActivity"
    android:background="@drawable/third"
    android:weightSum="1">



        <Button
            android:id="@+id/button_take_a_photo"
            android:layout_width="344dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:onClick="takePhoto"
            android:layout_marginTop="50dp"
            android:layout_weight="0.30"
            android:background="@android:color/transparent" />



        <Button
            android:id="@+id/button_select_a_photo_in_album"
            android:layout_width="345dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="selectImageInAlbum"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent" />


</LinearLayout>
